  <content>{{velocity}}
#set ($discard = $xwiki.jsx.use('XWiki.Translator.TranslatorAdminSheet'))
#set ($configDoc = $xwiki.getDocument('XWiki.Translator.TranslatorConfiguration'))
#set ($configObj = $configDoc.getObject('XWiki.Translator.TranslatorConfigurationClass'))
{{html clean="false" wiki="true"}}
&lt;form method="POST" name="translator-configuration-form" action="${xwiki.getURL('XWiki.Translator.TranslatorConfiguration', 'save')}" class='xform'&gt;
  &lt;div class="hidden"&gt;
    &lt;input type='hidden' name='form_token' value="$!{services.csrf.getToken()}" /&gt;
    &lt;input type='hidden' name='xredirect' value="$services.rendering.escape($xwiki.getRequestURL(), 'xwiki/2.1')" /&gt;
  &lt;/div&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_enabled"&gt;$configDoc.displayPrettyName('enabled', $configObj)&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_enabled.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $configDoc.display('enabled', 'edit', $configObj)
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_translator"&gt;$configDoc.displayPrettyName('translator', $configObj)&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_translator.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      &lt;select name="XWiki.Translator.TranslatorConfigurationClass_0_translator" id="XWiki.Translator.TranslatorConfigurationClass_0_translator"&gt;
        #foreach ($translator in $services.translator.getAvailableTranslators())
          &lt;option value="${translator}" #if($translator == $configObj.getValue('translator'))selected='selected'#end&gt;
            $services.translator.getName()
          &lt;/option&gt;
        #end
      &lt;/select&gt;
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_apiKey"&gt;$configDoc.displayPrettyName('apiKey', $configObj)&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_apiKey.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $configDoc.display('apiKey', 'edit', $configObj)
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_translationNamingStrategy"&gt;$configDoc.displayPrettyName('translationNamingStrategy', $configObj)&lt;/label&gt;
      &lt;cspan class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_translationNamingStrategy.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $configDoc.display('translationNamingStrategy', 'edit', $configObj)
    &lt;/dd&gt;
    &lt;dt class="same-name-translation-classes-configuration"&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_sameTranslationNameClasses"&gt;$configDoc.displayPrettyName('sameTranslationNameClasses', $configObj)&lt;/label&gt;
      &lt;cspan class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_sameTranslationNameClasses.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd class="same-name-translation-classes-configuration"&gt;
      $configDoc.display('sameTranslationNameClasses', 'edit', $configObj)
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_targetClasses"&gt;$configDoc.displayPrettyName('targetClasses', $configObj)&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_targetClasses.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $configDoc.display('targetClasses', 'edit', $configObj)
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_targetProperties"&gt;$configDoc.displayPrettyName('targetProperties', $configObj)&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorConfigurationClass_targetProperties.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $configDoc.display('targetProperties', 'edit', $configObj)
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label for="XWiki.Translator.TranslatorConfigurationClass_0_translatorGlossaryPrefix"&gt;$configDoc.displayPrettyName('translatorGlossaryNamePrefix', $configObj)&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('XWiki.Translator.TranslatorGlossaryConfigurationClass_translatorGlossaryNamePrefix.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
    $configDoc.display('translatorGlossaryNamePrefix', 'edit', $configObj)
    &lt;/dd&gt;
  &lt;/dl&gt;
  &lt;div class='buttonwrapper'&gt;
    &lt;input value="$services.localization.render('admin.save')" class='button' type='submit'&gt;
  &lt;/div&gt;
&lt;/form&gt;
{{/html}}

#set ($usage = $services.translator.getUsage())
  #if ($usage != $NULL)
    == Usage ==

    Character usage for current period: $usage.getCharacter().getCount() of $usage.getCharacter().getLimit()
  #end

== $services.localization.render('admin.translator.test') ==

#set ($input = "$!request.input")
#if ($input.trim() == '')
  #set ($input= "I have a dream that one day, down in Alabama, with its vicious racists, with its governor having his lips dripping with the words of 'interposition' and 'nullification' — one day right there in Alabama little black boys and black girls will be able to join hands with little white boys and white girls as sisters and brothers. – Martin Luther King Jr.")
#end
{{html}}
&lt;form class="xform" action="" method="POST"&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label&gt;
        $services.localization.render('admin.translator.textToTranslate')
      &lt;/label&gt;
    &lt;dd&gt;
      &lt;textarea rows="3" name="input"&gt;
        $escapetool.xml($input).trim()
      &lt;/textarea&gt;
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label&gt;$services.localization.render('admin.translator.sourceLanguage')&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      &lt;select name="sourceLanguage"&gt;
        #foreach ($locale in $xwiki.getAvailableLocales())
          &lt;option value="$locale.toString()"#if($request.sourceLanguage == $locale.toString()) selected#end&gt;$locale.getDisplayName($xcontext.locale) &lt;/option&gt;
        #end
      &lt;/select&gt;
    &lt;/dd&gt;
    &lt;dt&gt;
      &lt;label&gt;$services.localization.render('admin.translator.targetLanguage')&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      &lt;select name="targetLanguage"&gt;
        #foreach ($locale in $xwiki.getAvailableLocales())
          &lt;option value="$locale.toString()"#if($request.targetLanguage == $locale.toString()) selected#end&gt;$locale.getDisplayName($xcontext.locale) &lt;/option&gt;
        #end
      &lt;/select&gt;
    &lt;/dd&gt;
  &lt;/dl&gt;

  &lt;button type="submit" class="btn btn-primary" style="margin: 1rem 0 2rem 0;"&gt;
    $services.localization.render('admin.translator.translate')
  &lt;/button&gt;
  &lt;input name="translate" value="true" type="hidden"/&gt;
  &lt;input name="token" value="$services.csrf.getToken()" type="hidden"/&gt;
  &lt;input name="editor" value="$escapetool.xml($request.editor)" type="hidden"/&gt;
  &lt;input name="section" value="$escapetool.xml($request.section)" type="hidden"/&gt;
&lt;/form&gt;
{{/html}}

#if ($request.translate == 'true' &amp;&amp; $services.csrf.isTokenValid($request.token) &amp;&amp; $request.targetLanguage != '')
  {{info}}
    $services.translator.translate(
      $request.input,
      $services.localization.toLocale($request.sourceLanguage),
      $services.localization.toLocale($request.targetLanguage),
      false)
  {{/info}}
#end
{{/velocity}}</content>
