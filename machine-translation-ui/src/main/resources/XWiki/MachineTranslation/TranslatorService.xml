{{velocity}}
#set ($languages = $request.getParameterValues('languages'))
##jobId = request.jobId;
$services.progress.pushLevel(1)
$services.progress.startStep('First step')
#foreach ($language in $languages)
  #if ("$!language" != '')
    $services.machinetranslation.translate($services.model.resolveDocument($request.documentName), $services.localization.toLocale($language))
  #end
#end
$services.progress.endStep()
$services.progress.popLevel()
{{/velocity}}
{{/job}}

{{velocity}}
#if ("$!request.jobId" !='')
  [[(% class="btn btn-primary" %)$services.localization.render('translator.translate.returnToDocument')(%%)&gt;&gt;doc:$request.documentName]]
#else
  $response.sendRedirect($xwiki.getURL($services.wiki.getCurrentWikiDescriptor().getMainPageReference()))
#end
{{/velocity}}</content>
