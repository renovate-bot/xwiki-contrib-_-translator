## NB: see also: https://www.linkedin.com/pulse/ux-nuances-loading-states-rashna-razdan/
#set ($discard = $xwiki.jsx.use($wikimacro.doc.fullName))
#set ($id = "$!wikimacro.parameters.id")
#if ("$!id" != '')
  #set ($id = "-$id")
#end
#set ($showButton = $wikimacro.parameters.showButton)
{{html clean="false"}}
#if ($showButton)
&lt;button type="button" class="btn btn-primary" data-toggle="modal" data-target="#translator-modal$id"&gt;
    $services.localization.render('translator.translate')
&lt;/button&gt;
#end
&lt;div class="modal fade text-left" id="translator-modal$id" tabindex="-1" role="dialog"&gt;
  &lt;div class="modal-dialog" role="document"&gt;
    &lt;div class="modal-content"&gt;
      &lt;form method="GET" action="$xwiki.getURL('XWiki.MachineTranslation.MachineTranslationService')"&gt;
        &lt;div class="modal-header"&gt;
          &lt;button type="button" class="close" data-dismiss="modal" aria-label="Close"&gt;&lt;span
                  aria-hidden="true"&gt;&amp;times;&lt;/span&gt;&lt;/button&gt;
          &lt;h4 class="modal-title"&gt;
            $services.localization.render('translator.translate.modal.title')&lt;/h4&gt;
        &lt;/div&gt;
        &lt;div class="modal-body xform"&gt;
          &lt;table&gt;
            #set($wikiLanguagesRaw = $preferencesDoc.getValue('languages').split(','))
            ## Switch to a Collection instead of an array, and sort values
            #set($wikiLanguages = $collectiontool.sort($wikiLanguagesRaw))
            #set($discard = $wikiLanguages.remove($doc.defaultLanguage.toString()))
            #foreach($language in $wikiLanguages)
            #set ($checked = '')
            &lt;tr&gt;
              &lt;td&gt;
                &lt;input type="checkbox" id="language${escapetool.xml($language)}" name="languages"
                       value="$escapetool.xml($language)" $checked/&gt;
              &lt;/td&gt;
              &lt;td&gt;
                &lt;label for="language${escapetool.xml($language)}"&gt;$language&lt;/label&gt;
              &lt;/td&gt;
            &lt;/tr&gt;
            #end
          &lt;/table&gt;
          &lt;input type="hidden" name="documentName" value="$escapetool.xml($doc.fullName)"/&gt;
          &lt;input type="hidden" name="formToken" value="$services.csrf.getToken()"/&gt;
          #set ($jobId = $util.generateRandomString(6).toLowerCase())
          &lt;input type="hidden" name="jobId" value="$jobId"/&gt;
          &lt;input type="hidden" name="confirm" value="true"/&gt;
        &lt;/div&gt;
        &lt;div class="modal-footer"&gt;
          &lt;button type="button" class="btn btn-default" data-dismiss="modal"&gt;
            $services.localization.render('translator.translate.modal.close')
          &lt;/button&gt;
          &lt;button type="submit" class="btn btn-primary translator-translate-submit"&gt;
            $escapetool.xml($services.localization.render('translator.translate.modal.translate'))
          &lt;/button&gt;
        &lt;/div&gt;
      &lt;/form&gt;
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;
{{/html}}
{{/velocity}}</code>
