<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>parent-platform</artifactId>
    <version>14.10</version>
  </parent>
  <groupId>org.xwiki.contrib.translator</groupId>
  <artifactId>translator-parent</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Translator Extension - Parent POM</name>
  <packaging>pom</packaging>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/translator.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/translator.git</developerConnection>
    <url>https://github.com/xwiki-contrib/translator</url>
    <tag>HEAD</tag>
  </scm>
  <developers>
    <developer>
      <id>slauriere</id>
      <name>slauriere</name>
    </developer>
  </developers>
  <organization>
    <name>XWiki SAS</name>
    <url>http://xwiki.com</url>
  </organization>
  <properties>
    <xwiki.release.jira.skip>true</xwiki.release.jira.skip>
    <xwiki.issueManagement.jira.id>TRANSLATOR</xwiki.issueManagement.jira.id>
    <deepl.java.version>1.4.0</deepl.java.version>
    <platform.version>14.10</platform.version>
    <!-- deactivate checkstyle until we resolve the FanoutComplexity of AbstractTranslator -->
    <xwiki.checkstyle.skip>true</xwiki.checkstyle.skip>
    <xwiki.spoon.skip>true</xwiki.spoon.skip>
    <xwiki.revapi.skip>true</xwiki.revapi.skip>
  </properties>
  <modules>
    <module>translator-api</module>
    <module>translator-ui</module>
    <module>translator-deepl</module>
  </modules>
</project>
